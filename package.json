{
  "name": "media-sharing-app",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env dist/server.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "knex:migrate:make": "node --env-file=.env ./node_modules/knex/bin/cli.js --knexfile src/shared/database/knexfile.ts migrate:make",
    "knex:migrate:up": "node --env-file=.env ./node_modules/knex/bin/cli.js --knexfile src/shared/database/knexfile.ts migrate:up",
    "knex:migrate:down": "node --env-file=.env ./node_modules/knex/bin/cli.js --knexfile src/shared/database/knexfile.ts migrate:down",
    "knex:migrate:latest": "node --env-file=.env ./node_modules/knex/bin/cli.js --knexfile src/shared/database/knexfile.ts migrate:latest",
    "knex:migrate:rollback": "node --env-file=.env ./node_modules/knex/bin/cli.js --knexfile src/shared/database/knexfile.ts migrate:rollback"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.21.0",
  "dependencies": {
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@jest/globals": "^30.2.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.8.1",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
